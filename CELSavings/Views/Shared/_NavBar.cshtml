@model System.String
<nav class="navbar navbar-expand-md navbar-dark bg-primary fixed-top">
    <div class="container">
        @Html.ActionLink(Model, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler"
                type="button" data-toggle="collapse"
                data-target="#navbarColor01" aria-controls="navbarColor01"
                aria-expanded="false" aria-label="Toggle navigation" style="">
            <span class="navbar-toggler-icon"></span>
        </button>

        @if (Request.IsAuthenticated)
        {

            if (User.IsInRole(RoleName.CanManageSavingAccounts))
            {
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="nav navbar-nav mr-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navMemberDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Members
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navMemberDropdown">
                                @Html.ActionLink("Member's List", "Index", "SavingAccounts", new { area = "" }, new { @class = "dropdown-item" })
                                @Html.ActionLink("Add Member", "New", "SavingAccounts", new { area = "" }, new { @class = "dropdown-item" })

                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a id="navPaymentDropdown" class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Payments
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navPaymentDropdown">
                                @Html.ActionLink("Add Pament", "AddPayment", "Payments", new { area = "" }, new { @class = "dropdown-item" })
                            </div>
                        </li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            }
            else
            {
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="nav navbar-nav mr-auto">

                       @* <li class="nav-item"> @Html.ActionLink("Member's List", "Index", "SavingAccounts", new { area = "" }, new { @class = "nav-link" })</li>*@

                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            }
        }
        else
        {
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="nav navbar-nav mr-auto"></ul>
                @Html.Partial("_LoginPartial")
            </div>
        }
    </div>
</nav>

