<link href="https://cdnjs.cloudflare.com/ajax/libs/gijgo/1.9.11/combined/css/gijgo.min.css" rel="stylesheet" type="text/css" />
<style>
    .form-control {
        width: 280px;
    }
</style>

<h2>@ViewBag.Title</h2>


<form id="newSmallBusiness">

    <div class="row">
        <div class="col-md-6">

            <div class="form-group">
                <label>Product</label>
                <input type="text" id="txtProduct" name="product" data-rule-validProduct="true" required class="form-control">
            </div>

            <div class="form-group">
                <label>Product Description</label>
                <textarea id="txtProductDescription" rows="3" data-rule-validProductDescription="true" required class="form-control"></textarea>
            </div>

            <div class="form-group">
                <label>Buying Price</label>
                <input type="number" id="txtBuyingPrice" data-rule-validBuyingPrice="true" class="form-control">
            </div>

            <div class="form-group">
                <label>Profit Percentage</label>
                <input type="number" id="txtProfitPercentage" data-rule-validProfitPercentage="true" class="form-control">
            </div>

            <div class="form-group">
                <label>Selling Price</label>
                <input type="number" id="txtSellingPrice" readonly data-rule-validSellingPrice="true" class="form-control">
            </div>

        </div>
        <div class="col-md-6">

            <div class="form-group">
                <label>Customer / Guarantor</label>
                <div class="tt-container">
                    <input id="txtAccount" name="account" data-rule-validAccount="true" required type="text" value="" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label>Customer Name</label>
                <input type="text" id="txtCustomerName" name="customerName" data-rule-validCustomerName="true" required class="form-control">
            </div>

            <div class="form-group">
                <label>Sell Date</label>
                <input type="text" id="sellDate" class="form-control" readonly width="280">
            </div>
            
            <div class="form-group">
                <label>Initial Payment (if any)</label>
                <input type="text" class="form-control">
            </div>

            <div class="form-group">
                <label>Installment start</label>
                <input type="text" id="installmentStart" class="form-control" readonly width="280">
            </div>
        </div>
    </div>

    @*<div class="form-group">
                <label>Payment Month</label>
                <input type="text" class="form-control" id="txtPaymentMonth" name="paymentMonth" value="" readonly>
        </div>*@

    <br />
    <div class="form-group">
        <button class="btn btn-primary">Submit</button>
    </div>
</form>


@section scripts
{
    @Scripts.Render("~/bundles/dynamicform")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gijgo/1.9.11/combined/js/gijgo.min.js" type="text/javascript"></script>
    @Scripts.Render("~/bundles/newsmallbusiness")
}